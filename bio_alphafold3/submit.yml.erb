# Job submission configuration file
#
---
batch_connect:
  template: "basic"
  conn_params:
    - working_path  
script:
  email_on_started: true
  email_on_terminated: true
  email: <%= ENV["USER"] %>@tufts.edu
  job_name: "OnDemand/AlphaFold3"
  native:
    - "--time"
    - "<%= bc_num_hours %>:0:0"
    - "-n"
    - "<%= num_cores %>"
    - "--mem"
    - "<%= num_memory %>"
    - "--nodes"
    - "1"
    <%- if gpu_type == "a100-80GB" -%>
    -  "-p"
    - "<%= gpu_partition %>"
    - "--gres=gpu:a100:1"
    - "--constraint=a100-80G"
    <%- elsif gpu_partition == "preempt" || gpu_partition == "gpu" -%>
    -  "-p" 
    -   "<%= gpu_partition %>"
    - "--gres=gpu:<%= gpu_type %>:1"
    <%- end -%>

